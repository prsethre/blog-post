<div class="row">
  <div class="col-md-6">
    <ul class="list-group posts">
      {{#each model as |post|}}
        {{#link-to 'post' post}}
          <li class="list-group-item">
              <h4><b>{{post.title}}</b> by <em>{{post.author}}</em></h4>
              <h5>{{post.excerpt}}</h5>
              <p>Published on {{post.displayDate}}</p>
          </li>
        {{/link-to}}
      {{/each}}
    </ul>
  </div>
</div>