<div class="row">
  <div class="col-md-6">
    <ul class="list-group posts">
      {{#each model as |post|}}
        {{#link-to 'post' post}}
          <li class="list-group-item">
              <b>{{post.title}}</b> by <em>{{post.author}}</em> on {{post.displayDate}}
          </li>
        {{/link-to}}
      {{/each}}
    </ul>
  </div>
</div>